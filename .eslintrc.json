{
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest/globals": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "jest",
        "react",
        "react-redux",
        "import"
    ],
    "extends": [
        "plugin:react/recommended",
        "plugin:react-redux/recommended",
        "plugin:jest/recommended",
        "plugin:import/recommended",
        "eslint:recommended"
    ],
    "rules": {
        "react/no-typos": "error"
    }
}